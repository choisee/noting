<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/ll_note_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bright_grey"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_note_date"
                style="@style/NotingNormalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021/09/28 13:00:00" />

            <TextView
                android:id="@+id/tv_note_content"
                style="@style/NotingLargeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="가나다라마바가나다라마바가나다라마바가나다라" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_note_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/happy" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
