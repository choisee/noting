<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/color_FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeBase.MintStatusBar" parent="Theme.Noting">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/strong</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Button -->
    <style name="NotingButton">
        <item name="android:textColor">@color/strong</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="NotingDisableButton">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/normal</item>
        <item name="android:textSize">13dp</item>
    </style>

    <!-- TextView -->
    <style name="NotingXLargeTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotingLargeTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotingNormalTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotingSmallTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textSize">8dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>